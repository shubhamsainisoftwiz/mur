{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@env/*": [
        "environments/*"
      ],
      "@app-pages/*": [
        "app/pages/*"
      ],
      "@app-theme/*": [
        "app/@theme/*"
      ],
      "@app-core/*": [
        "app/@core/*"
      ],
      "@app-assets/*": [
        "app/assets/*"
      ],
     
    },
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "useDefineForClassFields": false
  }
}